---
interface NavItem {
  label: string;
  href: string;
}

const navItems: NavItem[] = [
  { label: 'What We Do', href: '/what-we-do' },
  { label: 'About Us', href: '/about' },
  { label: 'Resources', href: '/resources' },
  { label: 'Smart Start', href: '/smart-start' },
];

const currentPath = new URL(Astro.request.url).pathname;
---

<nav class="navbar">
  <div class="nav-container">
    <a href="/" class="logo">
      <img src="/technest-logo.svg" alt="TechNest" class="logo-image" />
    </a>
    <ul class="nav-menu">
      {navItems.map((item) => (
        <li class="nav-item">
          <a 
            href={item.href} 
            class={`nav-link ${currentPath === item.href ? 'active' : ''}`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
    <a href="/contact" class="lets-chat-button">Let's Chat</a>
  </div>
</nav>

<style>
  .navbar {
    background-color: var(--primary);
    border-bottom: 1px solid #e0e0e0;
    position: fixed;
    top: 0;
    z-index: 1000;
    width: 100%;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: opacity 0.3s ease;
    height: auto;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    color: #1f3e59;
    font-weight: 500;
    font-size: 1.25rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  .nav-link.active {
    color: var(--accent);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -0.25rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent);
  }

  .lets-chat-button {
    background-color: #0072cc;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.25rem;
    font-weight: 600;
    font-size: 1rem;
    font-family: 'Anek Latin', sans-serif;
    text-decoration: none;
    transition: background-color 0.3s ease;
    display: inline-block;
    white-space: nowrap;
    margin-left: auto;
  }

  .lets-chat-button:hover {
    background-color: #004499;
  }

  .lets-chat-button:active {
    background-color: #003366;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }

    .nav-menu {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .logo {
      font-size: 1.25rem;
    }

    .logo-icon {
      font-size: 1.5rem;
    }
  }
</style>
