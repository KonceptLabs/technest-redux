---
interface NavItem {
  label: string;
  href: string;
}

const navItems: NavItem[] = [
  { label: 'What We Do', href: '/what-we-do' },
  { label: 'About Us', href: '/about' },
  { label: 'Resources', href: '/resources' },
  { label: 'Smart Start', href: '/smart-start' },
];

const currentPath = new URL(Astro.request.url).pathname;
---

<nav class="navbar" id="main-nav">
  <div class="nav-container">
    <a href="/" class="logo">
      <img src="/technest-logo.svg" alt="TechNest" class="logo-image logo-full" />
      <img src="/technest-icon.svg" alt="TechNest" class="logo-image logo-icon" />
    </a>
    <button type="button" class="nav-toggle" aria-label="Toggle menu" aria-expanded="false" aria-controls="nav-menu">
      <span class="nav-toggle-icon" aria-hidden="true"></span>
    </button>
    <ul class="nav-menu" id="nav-menu">
      {navItems.map((item) => (
        <li class="nav-item">
          {item.label === 'Resources' ? (
            <span 
              class="nav-link nav-link-disabled"
              title="Coming Soon"
            >
              {item.label}
            </span>
          ) : (
            <a 
              href={item.href} 
              class={`nav-link ${currentPath === item.href ? 'active' : ''}`}
            >
              {item.label}
            </a>
          )}
        </li>
      ))}
    </ul>
    <a href="/contact" class="lets-chat-button">Let's Chat</a>
  </div>
</nav>

<script>
  const nav = document.getElementById('main-nav');
  const toggle = document.querySelector('.nav-toggle');
  if (nav && toggle) {
    toggle.addEventListener('click', () => {
      const open = nav.classList.toggle('is-open');
      toggle.setAttribute('aria-expanded', String(open));
    });
    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        nav?.classList.remove('is-open');
        toggle?.setAttribute('aria-expanded', 'false');
      }
    });
  }
</script>

<style>
  .navbar {
    background-color: var(--primary);
    border-bottom: 1px solid #e0e0e0;
    position: fixed;
    top: 0;
    z-index: 1000;
    width: 100%;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: opacity 0.3s ease;
    height: auto;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  .logo-icon {
    display: none;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    color: #1f3e59;
    font-weight: 500;
    font-size: 1.25rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  .nav-link.active {
    color: var(--accent);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -0.25rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent);
  }

  .nav-link-disabled {
    cursor: not-allowed;
    display: inline-block;
    position: relative;
  }

  .nav-link-disabled:hover {
    color: var(--accent);
  }

  .nav-link-disabled::after {
    content: 'Coming Soon';
    position: absolute;
    bottom: -3.5rem;
    left: 50%;
    transform: translateX(-50%);
    background-color: #0072cc;
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 0.25rem;
    font-size: 1rem;
    font-weight: 600;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 1001;
    pointer-events: none;
  }

  .nav-link-disabled:hover::after {
    opacity: 1;
    visibility: visible;
  }

  .lets-chat-button {
    background-color: #0072cc;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.25rem;
    font-weight: 600;
    font-size: 1rem;
    font-family: 'Anek Latin', sans-serif;
    text-decoration: none;
    transition: background-color 0.3s ease;
    display: inline-block;
    white-space: nowrap;
    margin-left: auto;
  }

  .lets-chat-button:hover {
    background-color: #004499;
  }

  .lets-chat-button:active {
    background-color: #003366;
  }

  /* Hamburger: hidden on desktop */
  .nav-toggle {
    display: none;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    padding: 0;
    background: transparent;
    border: 2px solid #1f3e59;
    border-radius: 0.25rem;
    color: #1f3e59;
    cursor: pointer;
    font: inherit;
  }

  .nav-toggle-icon {
    position: relative;
    width: 22px;
    height: 2px;
    background: currentColor;
  }

  .nav-toggle-icon::before,
  .nav-toggle-icon::after {
    content: '';
    position: absolute;
    left: 0;
    width: 22px;
    height: 2px;
    background: currentColor;
    transition: transform 0.2s ease;
  }

  .nav-toggle-icon::before {
    top: -7px;
  }

  .nav-toggle-icon::after {
    top: 7px;
  }

  .navbar.is-open .nav-toggle-icon {
    background: transparent;
  }

  .navbar.is-open .nav-toggle-icon::before {
    top: 0;
    transform: rotate(45deg);
  }

  .navbar.is-open .nav-toggle-icon::after {
    top: 0;
    transform: rotate(-45deg);
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0.625rem 1rem;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .logo-full {
      display: none;
    }

    .logo-icon {
      display: block;
      height: 40px;
    }

    .nav-toggle {
      display: flex;
      margin-left: auto;
      min-width: 44px;
      min-height: 44px;
    }

    .nav-menu {
      display: none;
      width: 100%;
      order: 3;
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem 0 0;
      font-size: 1rem;
    }

    .navbar.is-open .nav-menu {
      display: flex;
    }

    .nav-item {
      padding: 0.75rem 0;
      border-bottom: 1px solid #e0e0e0;
    }

    .nav-item .nav-link {
      display: block;
      padding: 0.25rem 0;
      font-size: 1.0625rem;
    }

    .nav-item:last-child {
      border-bottom: none;
    }

    .lets-chat-button {
      display: none;
      order: 4;
      width: 100%;
      margin: 1rem 0 0;
      text-align: center;
    }

    .navbar.is-open .lets-chat-button {
      display: inline-block;
    }
  }
</style>
