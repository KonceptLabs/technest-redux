---
interface ServeItem {
  image: string;
  description: string;
}

const serveItems: ServeItem[] = [
  {
    image: "/images/who-we-serve-1.jpg",
    description: "We support older residents who value safety and peace of mind, and help people who are upgrading their spaces for visiting relatives, as well as those who want support staying independent for longer."
  },
  {
    image: "/images/who-we-serve-2.jpg",
    description: "We work with busy professionals who want their homes to run smoothly, families who want simple solutions that fit their lifestyle."
  },
  {
    image: "/images/who-we-serve-3.jpg",
    description: "We provide local entrepreneurs and small business owners with dependable networks, clear security and smart systems that help their operations run without unnecessary cost or complexity."
  }
];
---

<section class="who-we-serve">
  <div class="who-we-serve-container">
    <h2 class="who-we-serve-title">WHO WE SERVE</h2>
    
    <div class="serve-grid">
      {serveItems.map((item) => (
        <div class="serve-item">
          <div class="serve-line"></div>
          <div class="serve-image">
            <img src={item.image} alt="Customer segment" />
          </div>
          <p class="serve-description">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .who-we-serve {
    background: linear-gradient(135deg, #0072cc 0%, #0056a3 100%);
    background-image: url('/background-shapes-blue.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    padding: 5rem 2rem;
  }

  .who-we-serve-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .who-we-serve-title {
    font-size: 36px;
    color: #fafafa;
    text-align: center;
    margin: 0 0 4rem 0;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .serve-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .serve-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .serve-item:hover {
    transform: translateY(-8px);
  }

  .serve-image {
    width: 100%;
    height: 250px;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    position: relative;
  }

  .serve-item:hover .serve-image {
    transform: scale(1.05);
    filter: drop-shadow(0 12px 24px rgba(0, 0, 0, 0.25));
  }

  .serve-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.4s ease;
  }

  .serve-item:hover .serve-image img {
    filter: brightness(1.1);
  }

  .serve-description {
    font-size: 14px;
    color: #fafafa;
    line-height: 1.7;
    margin: 0;
    font-weight: 400;
  }

  @media (max-width: 1024px) {
    .serve-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .serve-image {
      height: 220px;
    }
  }

  @media (max-width: 640px) {
    .serve-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .who-we-serve-title {
      font-size: 28px;
      margin-bottom: 2rem;
    }

    .serve-image {
      height: 200px;
    }

    .serve-description {
      font-size: 13px;
    }
  }
</style>
