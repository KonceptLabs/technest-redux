---
interface Pillar {
  icon: string;
  label: string;
}

const pillars: Pillar[] = [
  {
    icon: '/icon-tech-works.svg',
    label: 'Bespoke Services'
  },
  {
    icon: '/icon-personalized.svg',
    label: 'People-centric'
  },
  {
    icon: '/icon-security-privacy.svg',
    label: 'Privacy Focused'
  },
  {
    icon: '/icon-service-excellence.svg',
    label: 'Service Excellence'
  }
];
---

<section class="pillars-section">
  <div class="pillars-container">
    {pillars.map((pillar) => (
      <div class="pillar-item">
        <div class="pillar-icon">
          <img src={pillar.icon} alt={pillar.label} />
        </div>
        <p class="pillar-label">{pillar.label}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .pillars-section {
    background-color: #f5f5f5;
    padding: 4rem 2rem;
  }

  .pillars-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 3rem;
    align-items: center;
  }

  .pillar-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    text-align: center;
  }

  .pillar-icon {
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pillar-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .pillar-label {
    font-size: 23px;
    color: #0072cc;
    font-weight: 600;
    margin: 0;
    font-family: 'Anek Latin', sans-serif;
  }

  @media (max-width: 768px) {
    .pillars-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .pillar-icon {
      width: 80px;
      height: 80px;
    }

    .pillar-label {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .pillars-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .pillars-section {
      padding: 2rem 1rem;
    }
  }
</style>
