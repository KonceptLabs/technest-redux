---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <section class="form-hero">
    <div class="form-hero-content">
      <h1 class="form-title">Smart Start Nomination</h1>
      <p class="form-subtitle">Complete a short form about yourself or someone you would like to nominate and explain how a smart upgrade would make everyday life easier.</p>
    </div>
  </section>

  <section class="form-section">
    <div class="form-container">
      <form class="smart-start-form" onsubmit="return handleSubmit(event)">
        <!-- Your Information Section -->
        <div class="form-section-title">About You</div>

        <div class="form-group">
          <label for="your-name">Your Name *</label>
          <input type="text" id="your-name" name="your-name" required />
        </div>

        <div class="form-group">
          <label for="your-email">Your Email *</label>
          <input type="email" id="your-email" name="your-email" required />
        </div>

        <div class="form-group">
          <label for="your-phone">Your Phone *</label>
          <input type="tel" id="your-phone" name="your-phone" required />
        </div>

        <div class="form-group">
          <label for="hear-about">Where did you hear about TechNest? *</label>
          <select id="hear-about" name="hear-about" required>
            <option value="">Select one...</option>
            <option value="social-media">Social Media</option>
            <option value="word-of-mouth">Word of Mouth</option>
            <option value="website">Website</option>
            <option value="community-event">Community Event</option>
            <option value="local-partner">Local Partner</option>
            <option value="search-engine">Search Engine</option>
            <option value="other">Other</option>
          </select>
        </div>

        <!-- Their Information Section -->
        <div class="form-section-title">About Them</div>

        <div class="form-group">
          <label for="their-name">Their Name *</label>
          <input type="text" id="their-name" name="their-name" required />
        </div>

        <div class="form-group">
          <label for="their-city">Their City *</label>
          <input type="text" id="their-city" name="their-city" required />
        </div>

        <div class="form-group">
          <label for="why-nominating">Why are you nominating this person/company? *</label>
          <textarea id="why-nominating" name="why-nominating" rows="6" required></textarea>
        </div>

        <!-- Hidden metadata fields -->
        <input type="hidden" id="ip-address" name="ip-address" />
        <input type="hidden" id="referrer-url" name="referrer-url" />
        <input type="hidden" id="accept-language" name="accept-language" />
        <input type="hidden" id="ip-country" name="ip-country" />
        <input type="hidden" id="ip-city" name="ip-city" />
        <input type="hidden" id="ip-zip" name="ip-zip" />
        <input type="hidden" id="user-agent" name="user-agent" />

        <div class="form-group checkbox">
          <input type="checkbox" id="privacy-consent" name="privacy-consent" required />
          <label for="privacy-consent">I agree to TechNest's <a href="/privacy-policy">Privacy Policy</a> and understand my information will be used to review my application. *</label>
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="share-story" name="share-story" />
          <label for="share-story">I give permission for TechNest to share my story and photos (if selected) to showcase the impact of the Smart Start program.</label>
        </div>

        <button type="submit" class="submit-button">Submit Nomination</button>
      </form>

      <!-- Success/Error Modal -->
      <div id="submission-modal" class="modal hidden">
        <div class="modal-overlay"></div>
        <div class="modal-content">
          <div id="modal-icon" class="modal-icon"></div>
          <h2 id="modal-title" class="modal-title"></h2>
          <p id="modal-message" class="modal-message"></p>
          <button id="modal-close-button" class="modal-button" onclick="closeModal()">Close</button>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .form-hero {
    background: linear-gradient(135deg, #0072cc 0%, #0052a3 100%);
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 70px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .form-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-title {
    font-size: 2.5rem;
    color: #fafafa;
    margin: 0 0 1rem 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 700;
  }

  .form-subtitle {
    font-size: 1.1rem;
    color: #fafafa;
    margin: 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 400;
  }

  .form-section {
    background-color: #f5f5f5;
    background-image: url('/background-shapes.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    padding: 5rem 2rem;
  }

  .form-container {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .smart-start-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group label {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 1px solid #d0d0d0;
    border-radius: 0.25rem;
    font-size: 0.95rem;
    font-family: 'Anek Latin', sans-serif;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #0072cc;
    box-shadow: 0 0 0 3px rgba(0, 114, 204, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-group.checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-group.checkbox input {
    width: 18px;
    height: 18px;
    margin-top: 4px;
    flex-shrink: 0;
  }

  .form-group.checkbox label {
    font-weight: 400;
    margin: 0;
    font-size: 0.9rem;
  }

  .form-group.checkbox a {
    color: #0072cc;
  }

  .form-section-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #0072cc;
  }

  .form-section-title:first-child {
    margin-top: 0;
  }

  .submit-button {
    padding: 1rem;
    background-color: #0072cc;
    color: #fafafa;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 1rem;
  }

  .submit-button:hover {
    background-color: #004499;
    transform: translateY(-2px);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  .submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Modal Styles */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal.hidden {
    display: none;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    position: relative;
    background-color: #fafafa;
    border-radius: 0.5rem;
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    text-align: center;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .modal-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    height: 60px;
  }

  .modal-title {
    font-size: 1.5rem;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
  }

  .modal-message {
    font-size: 1rem;
    color: #4a5a6a;
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
  }

  .modal-button {
    padding: 0.75rem 2rem;
    background-color: #0072cc;
    color: #fafafa;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Anek Latin', sans-serif;
  }

  .modal-button:hover {
    background-color: #004499;
    transform: translateY(-2px);
  }

  .modal-success .modal-icon::before {
    content: "✓";
    color: #22c55e;
    display: block;
  }

  .modal-error .modal-icon::before {
    content: "⚠";
    color: #ef4444;
    display: block;
  }

  @media (max-width: 768px) {
    .form-hero {
      padding: 2rem 1rem;
    }

    .form-title {
      font-size: 2rem;
    }

    .form-subtitle {
      font-size: 1rem;
    }

    .form-section {
      padding: 2rem 1rem;
    }

    .form-container {
      padding: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  // Collect metadata and populate hidden fields
  async function collectMetadata() {
    try {
      // Get User-Agent
      document.getElementById('user-agent').value = navigator.userAgent || '';
      
      // Get referrer URL
      document.getElementById('referrer-url').value = document.referrer || '';
      
      // Get Accept-Language
      document.getElementById('accept-language').value = navigator.language || '';
      
      // Fetch IP geolocation data from ipapi.co
      const response = await fetch('https://ipapi.co/json/');
      const data = await response.json();
      
      document.getElementById('ip-address').value = data.ip || '';
      document.getElementById('ip-country').value = data.country_name || '';
      document.getElementById('ip-city').value = data.city || '';
      document.getElementById('ip-zip').value = data.postal || '';
    } catch (error) {
      console.error('[v0] Error collecting metadata:', error);
      // Continue even if metadata collection fails
    }
  }

  // Call collectMetadata when form loads
  document.addEventListener('DOMContentLoaded', collectMetadata);

  function handleSubmit(event) {
    event.preventDefault();
    
    const form = event.target;
    const formData = new FormData(form);
    const submitButton = form.querySelector('.submit-button');
    
    // Disable submit button during submission
    submitButton.disabled = true;
    submitButton.textContent = 'Submitting...';
    
    // Convert form data to JSON object
    const data = {
      // Submitter Information
      yourName: formData.get('your-name'),
      yourEmail: formData.get('your-email'),
      yourPhone: formData.get('your-phone'),
      hearAbout: formData.get('hear-about'),
      
      // Nominee Information
      theirName: formData.get('their-name'),
      theirCity: formData.get('their-city'),
      whyNominating: formData.get('why-nominating'),
      
      // Metadata
      ipAddress: formData.get('ip-address'),
      userAgent: formData.get('user-agent'),
      referrerUrl: formData.get('referrer-url'),
      acceptLanguage: formData.get('accept-language'),
      ipCountry: formData.get('ip-country'),
      ipCity: formData.get('ip-city'),
      ipZip: formData.get('ip-zip'),
      
      // Consents
      privacyConsent: formData.get('privacy-consent') ? 'Yes' : 'No',
      shareStory: formData.get('share-story') ? 'Yes' : 'No',
      
      // Timestamp
      submittedAt: new Date().toISOString()
    };
    
    // Send data to server API route
    fetch('/api/submit-nomination', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data)
    })
      .then(response => response.json())
      .then(result => {
        if (result.success) {
          showModal('success', 'Thank You!', 'Your nomination has been submitted successfully. We will review your submission and contact you soon.');
          form.reset();
        } else {
          throw new Error(result.message || 'Submission failed');
        }
      })
      .catch(error => {
        console.error('[v0] Error submitting nomination:', error);
        showModal('error', 'Submission Error', 'There was an error submitting your nomination. Please try again.');
      })
      .finally(() => {
        // Re-enable submit button
        submitButton.disabled = false;
        submitButton.textContent = 'Submit Nomination';
      });
    
    return false;
  }

  function showModal(type, title, message) {
    const modal = document.getElementById('submission-modal');
    const modalIcon = document.getElementById('modal-icon');
    const modalTitle = document.getElementById('modal-title');
    const modalMessage = document.getElementById('modal-message');
    const modalContent = modal.querySelector('.modal-content');

    // Set content
    modalTitle.textContent = title;
    modalMessage.textContent = message;

    // Set styling based on type
    modalContent.classList.remove('modal-success', 'modal-error');
    modalContent.classList.add(`modal-${type}`);

    // Show modal
    modal.classList.remove('hidden');
  }

  function closeModal() {
    const modal = document.getElementById('submission-modal');
    modal.classList.add('hidden');
  }

  // Close modal when clicking outside of it
  document.addEventListener('click', (event) => {
    const modal = document.getElementById('submission-modal');
    if (!modal.classList.contains('hidden')) {
      const modalContent = modal.querySelector('.modal-content');
      if (event.target === modal.querySelector('.modal-overlay')) {
        closeModal();
      }
    }
  });
</script>
