---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <section class="form-hero">
    <div class="form-hero-content">
      <h1 class="form-title">Smart Start Application</h1>
      <p class="form-subtitle">Enter or nominate someone to receive a complimentary smart technology upgrade</p>
    </div>
  </section>

  <section class="form-section">
    <div class="form-container">
      <form class="smart-start-form" onsubmit="return handleSubmit(event)">
        <div class="form-group">
          <label for="applicant-type">I am applying as:</label>
          <select id="applicant-type" name="applicant-type" required>
            <option value="">Select one...</option>
            <option value="individual">Individual</option>
            <option value="couple">Couple</option>
            <option value="family">Family</option>
            <option value="business">Small Business</option>
          </select>
        </div>

        <div class="form-group">
          <label for="full-name">Full Name *</label>
          <input type="text" id="full-name" name="full-name" required />
        </div>

        <div class="form-group">
          <label for="email">Email Address *</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="phone">Phone Number *</label>
          <input type="tel" id="phone" name="phone" required />
        </div>

        <div class="form-group">
          <label for="address">Address *</label>
          <input type="text" id="address" name="address" required />
        </div>

        <div class="form-group">
          <label for="city">City *</label>
          <input type="text" id="city" name="city" required />
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="state">State *</label>
            <input type="text" id="state" name="state" maxlength="2" required />
          </div>
          <div class="form-group">
            <label for="zip">Zip Code *</label>
            <input type="text" id="zip" name="zip" maxlength="5" required />
          </div>
        </div>

        <div class="form-group">
          <label for="nominating">Are you nominating someone?</label>
          <select id="nominating" name="nominating">
            <option value="no">No, I am applying for myself</option>
            <option value="yes">Yes, I am nominating someone</option>
          </select>
        </div>

        <div class="form-group">
          <label for="nominee-name">Nominee Name (if applicable)</label>
          <input type="text" id="nominee-name" name="nominee-name" />
        </div>

        <div class="form-group">
          <label for="why-smart-start">Why would a smart technology upgrade make a difference in your life or someone else's? *</label>
          <textarea id="why-smart-start" name="why-smart-start" rows="6" required></textarea>
        </div>

        <div class="form-group">
          <label for="space-type">What type of space do you need help with? *</label>
          <select id="space-type" name="space-type" required>
            <option value="">Select one...</option>
            <option value="home">Home</option>
            <option value="apartment">Apartment</option>
            <option value="office">Office/Workspace</option>
            <option value="retail">Retail Space</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="privacy-consent" name="privacy-consent" required />
          <label for="privacy-consent">I agree to TechNest's <a href="/privacy-policy">Privacy Policy</a> and understand my information will be used to review my application. *</label>
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="share-story" name="share-story" />
          <label for="share-story">I give permission for TechNest to share my story and photos (if selected) to showcase the impact of the Smart Start program.</label>
        </div>

        <button type="submit" class="submit-button" id="submit-button">Submit Application</button>
      </form>

      <!-- Modal for success/error messages -->
      <div id="form-modal" class="modal hidden">
        <div class="modal-overlay" onclick="closeModal()"></div>
        <div class="modal-content">
          <div class="modal-header">
            <h2 id="modal-title" class="modal-title"></h2>
            <button type="button" class="modal-close" onclick="closeModal()">Ã—</button>
          </div>
          <p id="modal-message" class="modal-message"></p>
          <button type="button" class="modal-button" onclick="closeModal()">Close</button>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .form-hero {
    background: linear-gradient(135deg, #0072cc 0%, #0052a3 100%);
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 70px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .form-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-title {
    font-size: 2.5rem;
    color: #fafafa;
    margin: 0 0 1rem 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 700;
  }

  .form-subtitle {
    font-size: 1.1rem;
    color: #fafafa;
    margin: 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 400;
  }

  .form-section {
    background-color: #f5f5f5;
    background-image: url('/background-shapes.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    padding: 5rem 2rem;
  }

  .form-container {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .smart-start-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group label {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 1px solid #d0d0d0;
    border-radius: 0.25rem;
    font-size: 0.95rem;
    font-family: 'Anek Latin', sans-serif;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #0072cc;
    box-shadow: 0 0 0 3px rgba(0, 114, 204, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-group.checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-group.checkbox input {
    width: 18px;
    height: 18px;
    margin-top: 4px;
    flex-shrink: 0;
  }

  .form-group.checkbox label {
    font-weight: 400;
    margin: 0;
    font-size: 0.9rem;
  }

  .form-group.checkbox a {
    color: #0072cc;
  }

  .submit-button {
    padding: 1rem;
    background-color: #0072cc;
    color: #fafafa;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 1rem;
  }

  .submit-button:hover {
    background-color: #004499;
    transform: translateY(-2px);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  .submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .form-group.error input,
  .form-group.error select,
  .form-group.error textarea {
    border-color: #ef4444;
    background-color: #fef2f2;
  }

  .form-group .error-message {
    color: #ef4444;
    font-size: 0.85rem;
    margin-top: 0.25rem;
    display: none;
  }

  .form-group.error .error-message {
    display: block;
  }

  /* Modal Styles */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal.hidden {
    display: none;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    position: relative;
    background-color: white;
    border-radius: 0.5rem;
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.15);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .modal-title {
    font-size: 1.5rem;
    margin: 0;
    font-weight: 700;
    font-family: 'Anek Latin', sans-serif;
  }

  .modal-content.success .modal-title {
    color: #22c55e;
  }

  .modal-content.error .modal-title {
    color: #ef4444;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: #999;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-close:hover {
    color: #000;
  }

  .modal-message {
    font-size: 1rem;
    color: #666;
    margin: 0 0 1.5rem 0;
    line-height: 1.6;
  }

  .modal-button {
    width: 100%;
    padding: 0.75rem;
    background-color: #0072cc;
    color: white;
    font-size: 0.95rem;
    font-weight: 600;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    font-family: 'Anek Latin', sans-serif;
    transition: background-color 0.3s ease;
  }

  .modal-button:hover {
    background-color: #004499;
  }

  @media (max-width: 768px) {
    .form-hero {
      padding: 2rem 1rem;
    }

    .form-title {
      font-size: 2rem;
    }

    .form-subtitle {
      font-size: 1rem;
    }

    .form-section {
      padding: 2rem 1rem;
    }

    .form-container {
      padding: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script is:inline>
  // Form validation rules
  const validationRules = {
    'applicant-type': (value) => value !== '',
    'full-name': (value) => value.trim().length > 0,
    'email': (value) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value),
    'phone': (value) => /^\d{10}$|^\d{3}-\d{3}-\d{4}$/.test(value.replace(/\D/g, '')),
    'address': (value) => value.trim().length > 0,
    'city': (value) => value.trim().length > 0,
    'state': (value) => /^[A-Z]{2}$|^[a-z]{2}$/.test(value),
    'zip': (value) => /^\d{5}$/.test(value),
    'why-smart-start': (value) => value.trim().length > 10,
    'space-type': (value) => value !== '',
    'privacy-consent': (checked) => checked,
  };

  function validateField(fieldName, value) {
    const rule = validationRules[fieldName];
    if (rule) {
      return rule(value);
    }
    return true;
  }

  function clearFieldError(fieldName) {
    const field = document.getElementById(fieldName);
    if (field) {
      const group = field.closest('.form-group');
      if (group) {
        group.classList.remove('error');
        const errorMsg = group.querySelector('.error-message');
        if (errorMsg) {
          errorMsg.textContent = '';
        }
      }
    }
  }

  function setFieldError(fieldName, message) {
    const field = document.getElementById(fieldName);
    if (field) {
      const group = field.closest('.form-group');
      if (group) {
        group.classList.add('error');
        let errorMsg = group.querySelector('.error-message');
        if (!errorMsg) {
          errorMsg = document.createElement('div');
          errorMsg.className = 'error-message';
          group.appendChild(errorMsg);
        }
        errorMsg.textContent = message;
      }
    }
  }

  function validateForm() {
    let isValid = true;
    
    // Validate each field
    const fields = [
      'applicant-type',
      'full-name',
      'email',
      'phone',
      'address',
      'city',
      'state',
      'zip',
      'why-smart-start',
      'space-type',
      'privacy-consent'
    ];

    for (const fieldName of fields) {
      const field = document.getElementById(fieldName);
      if (!field) continue;

      clearFieldError(fieldName);

      let value = field.type === 'checkbox' ? field.checked : field.value;
      
      if (!validateField(fieldName, value)) {
        isValid = false;
        let errorMsg = '';
        
        switch (fieldName) {
          case 'applicant-type':
            errorMsg = 'Please select an applicant type';
            break;
          case 'full-name':
            errorMsg = 'Full name is required';
            break;
          case 'email':
            errorMsg = 'Please enter a valid email address';
            break;
          case 'phone':
            errorMsg = 'Please enter a valid phone number';
            break;
          case 'address':
            errorMsg = 'Address is required';
            break;
          case 'city':
            errorMsg = 'City is required';
            break;
          case 'state':
            errorMsg = 'Please enter a valid 2-letter state code';
            break;
          case 'zip':
            errorMsg = 'Please enter a valid 5-digit zip code';
            break;
          case 'why-smart-start':
            errorMsg = 'Please provide more details (at least 10 characters)';
            break;
          case 'space-type':
            errorMsg = 'Please select a space type';
            break;
          case 'privacy-consent':
            errorMsg = 'You must agree to the privacy policy';
            break;
        }
        
        setFieldError(fieldName, errorMsg);
      }
    }

    return isValid;
  }

  function showModal(type, title, message) {
    const modal = document.getElementById('form-modal');
    const titleEl = document.getElementById('modal-title');
    const messageEl = document.getElementById('modal-message');
    const content = modal.querySelector('.modal-content');

    titleEl.textContent = title;
    messageEl.textContent = message;

    content.classList.remove('success', 'error');
    content.classList.add(type);

    modal.classList.remove('hidden');
  }

  function closeModal() {
    const modal = document.getElementById('form-modal');
    modal.classList.add('hidden');
  }

  async function handleSubmit(event) {
    event.preventDefault();

    // Validate form
    if (!validateForm()) {
      showModal('error', 'Validation Error', 'Please fix the errors above and try again.');
      return false;
    }

    const form = event.target;
    const submitButton = document.getElementById('submit-button');
    const originalText = submitButton.textContent;

    try {
      submitButton.disabled = true;
      submitButton.textContent = 'Submitting...';

      // Collect form data
      const formData = new FormData(form);
      const data = {
        applicantType: formData.get('applicant-type'),
        fullName: formData.get('full-name'),
        email: formData.get('email'),
        phone: formData.get('phone'),
        address: formData.get('address'),
        city: formData.get('city'),
        state: formData.get('state'),
        zip: formData.get('zip'),
        nominating: formData.get('nominating'),
        nomineeName: formData.get('nominee-name') || '',
        whySmartStart: formData.get('why-smart-start'),
        spaceType: formData.get('space-type'),
        privacyConsent: formData.get('privacy-consent') === 'on',
        shareStory: formData.get('share-story') === 'on',
        submittedAt: new Date().toISOString()
      };

      // Submit to API
      const response = await fetch('/api/submit-application', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
      });

      console.log('[v0] Response status:', response.status);
      
      // Handle empty response body (204 No Content)
      let result;
      if (response.status === 204) {
        result = {};
      } else {
        try {
          result = await response.json();
        } catch (jsonError) {
          console.error('[v0] Failed to parse response JSON:', jsonError);
          result = { success: false, message: 'Invalid server response' };
        }
      }

      if (response.ok && result.success) {
        showModal('success', 'Success!', 'Thank you for your application! We will review your submission and contact you soon.');
        form.reset();
      } else {
        showModal('error', 'Submission Error', result.message || 'There was an error submitting your application.');
      }
    } catch (error) {
      console.error('[v0] Form submission error:', error);
      showModal('error', 'Error', 'There was an error submitting your application. Please try again.');
    } finally {
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }

    return false;
  }

  // Add real-time validation listeners
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('.smart-start-form');
    if (form) {
      form.addEventListener('change', (e) => {
        if (e.target.id) {
          clearFieldError(e.target.id);
        }
      });
    }
  });
</script>
