---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <section class="form-hero">
    <div class="form-hero-content">
      <h1 class="form-title">Smart Start Application</h1>
      <p class="form-subtitle">Enter or nominate someone to receive a complimentary smart technology upgrade</p>
    </div>
  </section>

  <section class="form-section">
    <div class="form-container">
      <form class="smart-start-form" onsubmit="return handleSubmit(event)">
        <!-- Submitter Information Section -->
        <div class="form-section-title">About You (Submitter)</div>

        <div class="form-group">
          <label for="submitter-name">Submitter Name *</label>
          <input type="text" id="submitter-name" name="submitter-name" required />
        </div>

        <div class="form-group">
          <label for="submitter-email">Submitter Email *</label>
          <input type="email" id="submitter-email" name="submitter-email" required />
        </div>

        <div class="form-group">
          <label for="submitter-phone">Submitter Phone *</label>
          <input type="tel" id="submitter-phone" name="submitter-phone" required />
        </div>

        <div class="form-group">
          <label for="hear-about">Where did you hear about TechNest? *</label>
          <select id="hear-about" name="hear-about" required>
            <option value="">Select one...</option>
            <option value="social-media">Social Media</option>
            <option value="word-of-mouth">Word of Mouth</option>
            <option value="website">Website</option>
            <option value="community-event">Community Event</option>
            <option value="local-partner">Local Partner</option>
            <option value="search-engine">Search Engine</option>
            <option value="other">Other</option>
          </select>
        </div>

        <!-- Nominated Person/Business Section -->
        <div class="form-section-title">About the Nominee</div>

        <div class="form-group">
          <label for="nominated-name">Nominated Name *</label>
          <input type="text" id="nominated-name" name="nominated-name" required />
        </div>

        <div class="form-group">
          <label for="nominated-city">Nominated City *</label>
          <input type="text" id="nominated-city" name="nominated-city" required />
        </div>

        <div class="form-group">
          <label for="why-nominating">Why are you nominating this person/company? *</label>
          <textarea id="why-nominating" name="why-nominating" rows="6" required></textarea>
        </div>

        <!-- Hidden metadata fields -->
        <input type="hidden" id="ip-address" name="ip-address" />
        <input type="hidden" id="referrer-url" name="referrer-url" />
        <input type="hidden" id="accept-language" name="accept-language" />
        <input type="hidden" id="ip-country" name="ip-country" />
        <input type="hidden" id="ip-city" name="ip-city" />
        <input type="hidden" id="ip-zip" name="ip-zip" />

        <div class="form-group checkbox">
          <input type="checkbox" id="privacy-consent" name="privacy-consent" required />
          <label for="privacy-consent">I agree to TechNest's <a href="/privacy-policy">Privacy Policy</a> and understand my information will be used to review my application. *</label>
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="share-story" name="share-story" />
          <label for="share-story">I give permission for TechNest to share my story and photos (if selected) to showcase the impact of the Smart Start program.</label>
        </div>

        <button type="submit" class="submit-button">Submit Application</button>
      </form>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .form-hero {
    background: linear-gradient(135deg, #0072cc 0%, #0052a3 100%);
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 70px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .form-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-title {
    font-size: 2.5rem;
    color: #fafafa;
    margin: 0 0 1rem 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 700;
  }

  .form-subtitle {
    font-size: 1.1rem;
    color: #fafafa;
    margin: 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 400;
  }

  .form-section {
    background-color: #f5f5f5;
    background-image: url('/background-shapes.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    padding: 5rem 2rem;
  }

  .form-container {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .smart-start-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group label {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 1px solid #d0d0d0;
    border-radius: 0.25rem;
    font-size: 0.95rem;
    font-family: 'Anek Latin', sans-serif;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #0072cc;
    box-shadow: 0 0 0 3px rgba(0, 114, 204, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-group.checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-group.checkbox input {
    width: 18px;
    height: 18px;
    margin-top: 4px;
    flex-shrink: 0;
  }

  .form-group.checkbox label {
    font-weight: 400;
    margin: 0;
    font-size: 0.9rem;
  }

  .form-group.checkbox a {
    color: #0072cc;
  }

  .form-section-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #0072cc;
  }

  .form-section-title:first-child {
    margin-top: 0;
  }

  .submit-button {
    padding: 1rem;
    background-color: #0072cc;
    color: #fafafa;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 1rem;
  }

  .submit-button:hover {
    background-color: #004499;
    transform: translateY(-2px);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .form-hero {
      padding: 2rem 1rem;
    }

    .form-title {
      font-size: 2rem;
    }

    .form-subtitle {
      font-size: 1rem;
    }

    .form-section {
      padding: 2rem 1rem;
    }

    .form-container {
      padding: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Collect metadata and populate hidden fields
  async function collectMetadata() {
    try {
      // Get referrer URL
      document.getElementById('referrer-url').value = document.referrer || '';
      
      // Get Accept-Language
      document.getElementById('accept-language').value = navigator.language || '';
      
      // Fetch IP geolocation data from ipapi.co
      const response = await fetch('https://ipapi.co/json/');
      const data = await response.json();
      
      document.getElementById('ip-address').value = data.ip || '';
      document.getElementById('ip-country').value = data.country_name || '';
      document.getElementById('ip-city').value = data.city || '';
      document.getElementById('ip-zip').value = data.postal || '';
    } catch (error) {
      console.error('[v0] Error collecting metadata:', error);
      // Continue even if metadata collection fails
    }
  }

  // Call collectMetadata when form loads
  document.addEventListener('DOMContentLoaded', collectMetadata);

  function handleSubmit(event) {
    event.preventDefault();
    alert('Thank you for your application! We will review your submission and contact you soon.');
    event.target.reset();
    return false;
  }
</script>
