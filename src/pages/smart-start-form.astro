---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <section class="form-hero">
    <div class="form-hero-content">
      <h1 class="form-title">Smart Start Application</h1>
      <p class="form-subtitle">Enter or nominate someone to receive a complimentary smart technology upgrade</p>
    </div>
  </section>

  <section class="form-section">
    <div class="form-container">
      <form class="smart-start-form" onsubmit="return handleSubmit(event)">
        <div class="form-group">
          <label for="applicant-type">I am applying as:</label>
          <select id="applicant-type" name="applicant-type" required>
            <option value="">Select one...</option>
            <option value="individual">Individual</option>
            <option value="couple">Couple</option>
            <option value="family">Family</option>
            <option value="business">Small Business</option>
          </select>
        </div>

        <div class="form-group">
          <label for="full-name">Full Name *</label>
          <input type="text" id="full-name" name="full-name" required />
        </div>

        <div class="form-group">
          <label for="email">Email Address *</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="phone">Phone Number *</label>
          <input type="tel" id="phone" name="phone" required />
        </div>

        <div class="form-group">
          <label for="address">Address *</label>
          <input type="text" id="address" name="address" required />
        </div>

        <div class="form-group">
          <label for="city">City *</label>
          <input type="text" id="city" name="city" required />
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="state">State *</label>
            <input type="text" id="state" name="state" maxlength="2" required />
          </div>
          <div class="form-group">
            <label for="zip">Zip Code *</label>
            <input type="text" id="zip" name="zip" maxlength="5" required />
          </div>
        </div>

        <div class="form-group">
          <label for="nominating">Are you nominating someone?</label>
          <select id="nominating" name="nominating">
            <option value="no">No, I am applying for myself</option>
            <option value="yes">Yes, I am nominating someone</option>
          </select>
        </div>

        <div class="form-group">
          <label for="nominee-name">Nominee Name (if applicable)</label>
          <input type="text" id="nominee-name" name="nominee-name" />
        </div>

        <div class="form-group">
          <label for="why-smart-start">Why would a smart technology upgrade make a difference in your life or someone else's? *</label>
          <textarea id="why-smart-start" name="why-smart-start" rows="6" required></textarea>
        </div>

        <div class="form-group">
          <label for="space-type">What type of space do you need help with? *</label>
          <select id="space-type" name="space-type" required>
            <option value="">Select one...</option>
            <option value="home">Home</option>
            <option value="apartment">Apartment</option>
            <option value="office">Office/Workspace</option>
            <option value="retail">Retail Space</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="privacy-consent" name="privacy-consent" required />
          <label for="privacy-consent">I agree to TechNest's <a href="/privacy-policy">Privacy Policy</a> and understand my information will be used to review my application. *</label>
        </div>

        <div class="form-group checkbox">
          <input type="checkbox" id="share-story" name="share-story" />
          <label for="share-story">I give permission for TechNest to share my story and photos (if selected) to showcase the impact of the Smart Start program.</label>
        </div>

        <button type="submit" class="submit-button">Submit Application</button>
      </form>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .form-hero {
    background: linear-gradient(135deg, #0072cc 0%, #0052a3 100%);
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 70px;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .form-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-title {
    font-size: 2.5rem;
    color: #fafafa;
    margin: 0 0 1rem 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 700;
  }

  .form-subtitle {
    font-size: 1.1rem;
    color: #fafafa;
    margin: 0;
    font-family: 'Anek Latin', sans-serif;
    font-weight: 400;
  }

  .form-section {
    background-color: #f5f5f5;
    background-image: url('/background-shapes.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    padding: 5rem 2rem;
  }

  .form-container {
    max-width: 700px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .smart-start-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group label {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a2a3a;
    font-family: 'Anek Latin', sans-serif;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.75rem;
    border: 1px solid #d0d0d0;
    border-radius: 0.25rem;
    font-size: 0.95rem;
    font-family: 'Anek Latin', sans-serif;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #0072cc;
    box-shadow: 0 0 0 3px rgba(0, 114, 204, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-group.checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .form-group.checkbox input {
    width: 18px;
    height: 18px;
    margin-top: 4px;
    flex-shrink: 0;
  }

  .form-group.checkbox label {
    font-weight: 400;
    margin: 0;
    font-size: 0.9rem;
  }

  .form-group.checkbox a {
    color: #0072cc;
  }

  .submit-button {
    padding: 1rem;
    background-color: #0072cc;
    color: #fafafa;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 1rem;
  }

  .submit-button:hover {
    background-color: #004499;
    transform: translateY(-2px);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .form-hero {
      padding: 2rem 1rem;
    }

    .form-title {
      font-size: 2rem;
    }

    .form-subtitle {
      font-size: 1rem;
    }

    .form-section {
      padding: 2rem 1rem;
    }

    .form-container {
      padding: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  function handleSubmit(event) {
    event.preventDefault();
    alert('Thank you for your application! We will review your submission and contact you soon.');
    event.target.reset();
    return false;
  }
</script>
