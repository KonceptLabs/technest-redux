<style>
  .tos-page {
    background-color: var(--primary);
    color: var(--text-primary);
    min-height: calc(100vh - 80px);
    padding: 4rem 2rem;
  }

  .policy-container {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    color: #0072cc;
    margin-bottom: 1rem;
    font-family: 'Anek Latin', sans-serif;
  }

  .last-updated {
    color: var(--text-secondary);
    font-style: italic;
    margin-bottom: 2rem;
    font-family: 'Anek Latin', sans-serif;
  }

  section {
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 1.5rem;
    color: #0072cc;
    margin-bottom: 1rem;
    font-family: 'Anek Latin', sans-serif;
    margin-top: 2rem;
  }

  p {
    line-height: 1.8;
    margin-bottom: 1rem;
    font-family: 'Anek Latin', sans-serif;
  }

  ul {
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
    font-family: 'Anek Latin', sans-serif;
  }

  a {
    color: #0072cc;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #004499;
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .tos-page {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 1.25rem;
    }
  }
</style>
